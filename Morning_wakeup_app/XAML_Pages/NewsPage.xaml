        <TextBlock x:Name="news_author3" HorizontalAlignment="Left" Margin="655,539,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Width="127"/>
        <TextBlock x:Name="news_description3" HorizontalAlignment="Left" Margin="833,539,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="138" Width="425"/>

        <TextBox x:Name="news_search_input_tb" HorizontalAlignment="Left" Margin="422,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="Type here to list the news by" InputScope="Default" TextChanged="news_search_input_tb_TextChanged"/>
